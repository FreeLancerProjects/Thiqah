<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <data>
        <variable
            name="orderMode"
            type="com.arab_developers_apps.theqah.models.OrderDataModel.OrderModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_order"
        android:layout_margin="3dp"

        >


        <TextView
            android:id="@+id/tvTransState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="@string/refused_transfer"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintTop_toBottomOf="@id/tvTransState"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"



            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"

                >
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray4"
                    android:textSize="13sp"
                    android:text="@string/new_order"
                    android:layout_marginBottom="10dp"
                    android:lines="2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/un_checked_circle"
                        />
                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/gray4"/>

                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_2"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray4"
                    android:textSize="13sp"
                    android:text="@string/beneficiary_transfer"
                    android:layout_marginBottom="10dp"
                    android:lines="2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/un_checked_circle"
                        />
                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/gray4"/>

                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_3"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray4"
                    android:textSize="13sp"
                    android:text="@string/shipping"
                    android:layout_marginBottom="10dp"
                    android:lines="2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/un_checked_circle"
                        />
                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/gray4"/>

                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_4"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray4"
                    android:textSize="13sp"
                    android:text="@string/confirmation"
                    android:layout_marginBottom="10dp"
                    android:lines="2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/un_checked_circle"
                        />
                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/gray4"/>

                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_5"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray4"
                    android:textSize="13sp"
                    android:text="@string/receipt_payment"
                    android:layout_marginBottom="10dp"
                    android:lines="2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/un_checked_circle"
                        />


                </LinearLayout>





            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll"
            android:layout_marginTop="10dp"
            android:text="@string/order_number"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_goneMarginTop="10dp"

            />

        <TextView
            android:id="@+id/tvOrderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv"
            app:layout_constraintTop_toTopOf="@id/tv"
            android:layout_marginTop="5dp"
            android:text='@{"#"+String.valueOf(orderMode.id)}'
            android:textColor="@color/gray4"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/tv"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"


            />

        <TextView
            android:id="@+id/tvP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv"
            app:layout_constraintTop_toBottomOf="@id/tv"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="@string/transfer_purpose"
            />
        <TextView
            android:id="@+id/tvPurpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvP"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv"
            android:textColor="@color/gray4"
            android:textSize="15sp"
            android:text="@{orderMode.reason}"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"


            />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv"
            app:layout_constraintTop_toBottomOf="@id/tvPurpose"
            android:layout_marginTop="5dp"
            android:text="@string/order_state"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"



            />

        <TextView
            android:id="@+id/tvOrderState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv2"
            app:layout_constraintTop_toTopOf="@id/tvOrderState"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray4"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/tv2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintWidth_default="wrap"
            android:maxLines="2"
            android:ellipsize="end"
            state="@{orderMode.status}"

            />

        <Button
            android:id="@+id/btnDetails"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/btn_details"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:text="@string/details"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvOrderState"
            android:paddingRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"


            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
