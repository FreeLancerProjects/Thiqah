<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >
    <data>
        <variable
            name="lang"
            type="String" />
        <variable
            name="backListener"
            type="com.creative.share.apps.thiqah.interfaces.Listeners.BackListener" />
        <variable
            name="actions"
            type="com.creative.share.apps.thiqah.interfaces.Listeners.OrderActionListener" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities_fragments.activity_choose_order_type.ChooseOrderTypeActivity"
        android:background="@drawable/bg"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/btn_choose_order"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="@string/buyer"
                android:onClick="@{()->actions.orderBuyer()}"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/btn_choose_order"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="@string/seller"
                android:layout_marginTop="20dp"
                android:onClick="@{()->actions.orderSeller()}"

                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
