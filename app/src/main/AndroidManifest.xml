<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.arab_developers_apps.theqah">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.arab_developers_apps.theqah.language.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="m">
        <activity android:name="com.arab_developers_apps.theqah.activities_fragments.activity_payment_details.PaymentDetailsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden"
            />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.activity_splash_2.Splash2Activity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter android:label="thiqah">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="thiqah-sa.com"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.activity_image.ImageActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.activity_appeal_details.AppealDetailsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.activity_appeal.AppealActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.comments_activity.CommentsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.order_details.OrderDetailsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.my_order.MyOrderActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <service
            android:name="com.arab_developers_apps.theqah.notification.FireBaseMessaging"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.bank_account.BankActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.activity_order_buyer.BuyerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.activity_order_seller.OrderSellerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.activity_video.VideoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.activity_forget_password.ForgetPasswordActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.activity_guide.GuideActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.activity_notification.NotificationActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName="com.arab_developers_apps.theqah.activities_fragments.activity_home.HomeActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.activity_contact.ContactUsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.about_app.AboutAppActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.activity_info.InfoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.activity_home.HomeActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" >


            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>

                <category android:name="android.intent.category.DEFAULT"></category>
                <category android:name="android.intent.category.BROWSABLE"></category>

                <data
                    android:host="thiqah-sa.com"
                    android:path="/launch"
                    android:scheme="http">

                </data>
            </intent-filter>

        </activity>
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.activity_splash.SplashActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER" />


            </intent-filter>
        </activity>
        <activity
            android:name="com.arab_developers_apps.theqah.activities_fragments.activity_sign_in.SignInActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>